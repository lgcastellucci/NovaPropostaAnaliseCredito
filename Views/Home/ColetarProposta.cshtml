@model NovaPropostaAnaliseCredito.Models.ProposalModel

<div class="text-center">
    <h1 class="display-4">Coletar Proposta</h1>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<div class="container">
    <form asp-action="SubmitProposta" method="post">
        <input type="hidden" name="ProposalJson" value='@ViewBag.ProposalJson' />

        <div class="form-group">
            <label for="cpf">CPF</label>
            <input type="text" class="form-control" id="cpf" name="cpf" required value=@Model.cpf>
        </div>
        <div class="form-group">
            <label for="birthDate">Data de Nascimento</label>
            <input type="date" class="form-control" id="birthDate" name="birthDate" required value="@Model.birthDate?.ToString("yyyy-MM-dd")">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" required value=@Model.email>
        </div>
        <div class="form-group">
            <label for="phone">Telefone Celular</label>
            <input type="tel" class="form-control" id="phone" name="phone" required value=@Model.phone>
        </div>
        <div class="form-group">
            <br />
        </div>
        <div class="form-group d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>
    </form>
</div>
